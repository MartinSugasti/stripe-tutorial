<!DOCTYPE html>
<html>
  <head>
    <title>StripeTutorial</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-dark conatiner">
    <% if flash[:success] %>
      <p class="alert alert-success mb-0"><%= flash[:success] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="alert alert-danger mb-0"><%= flash[:error] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
